<launch>
    <node pkg="uav_px4_ctrl" type="waypoint_publisher" name="waypoint_publisher" output="screen" >
        <!-- 输入话题（odom 优先） -->
        <param name="odom_topic" value="/drone_0_visual_slam/odom" />
        <param name="pose_topic" value="/mavros/local_position/pose" />
        <param name="goal_topic" value="/goal_pose" />

        <!-- 到达阈值 -->
        <param name="distance_threshold" value="1.0" />

        <!-- 到达后等待时间 -->
        <param name="wait_time" value="5.0" />

        <!-- 启动延迟时间 -->
        <param name="start_delay" value="3.0" />

        <!-- 位置话题超时时间（秒） -->
        <param name="topic_timeout" value="2.0" />

        <!-- 路径点 -->
        <param name="waypoints" value="[[0, 0, 4.0], [-33.0, 0, 1.0], [-33.0, -44.5, 4.0], [0, 0, 1.0]]"/>
    </node>
</launch>

