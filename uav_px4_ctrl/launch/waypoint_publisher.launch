<launch>
  <!-- 输入话题（odom 优先） -->
  <param name="odom_topic" value="" />
  <param name="pose_topic" value="/mavros/local_position/pose" />

  <!-- 到达阈值 -->
  <param name="distance_threshold" value="0.3" />

  <!-- 到达后等待时间 -->
  <param name="wait_time" value="2.0" />

  <!-- 启动延迟时间 -->
  <param name="start_delay" value="3.0" />

  <!-- 位置话题超时时间（秒） -->
  <param name="topic_timeout" value="2.0" />

  <!-- 路径点 -->
  <param name="waypoints" value="[[4.0, 0.0, 0.5], [0.0, 2.0, 0.5], [4.0, -2.0, 0.5]]" />

  <node pkg="uav_px4_ctrl" type="waypoint_publisher" name="waypoint_publisher" output="screen" />
</launch>

